/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.swiper-item{
  display: block;
  height: 150px;
}

.swpier{
  height:400rpx;
  width:100%
}
.swiper image {
  height: 100%;
  width: 100%;
}
.news-item-container {
  background-color: #f2f2f2;
  width: 100%;
  padding-left: 8px;
  padding-right: 8px;
}

.movie-item {
  display: flex;
  padding-left: 8px;
  padding-top: 8px;
  padding-right: 8px;
  padding-bottom: 8px;
  margin-top: 8px;
  margin-left: 8px;
  margin-right: 8px;
  background-color: #fff;
  border: 1px solid #eaeaea;
  border-bottom: 1px solid #d0d0d0;
  border-radius: 5px;
}

.movie-item-right{
 width: 100%;
  height: 80px;
}

.movie-image{
  width: 80px;
  height: 80px;
}

.movie-item-title{

  padding-left: 8px;
  font-size: 16px;
}

.sub-title{
  color: #76787e;
  height: 36px;
  line-height: 36px;
  padding: 0 16px;
  width: 100%;
  font-size: 14px;
  padding-left: 16px;
  padding-right: 16px;
}

.wish{
  padding-left: 8px;
  color: #76787e;
	font-size:12px;

	width:190px;

	text-overflow: ellipsis;
}

.type,
.star,
.showInfo{
  padding-left: 8px;
  color: #76787e;
	font-size:12px;

	width:190px;
	overflow: hidden;
  margin-top:6px;
	text-overflow: ellipsis;
}
