/* pages/detail/detail.wxss */

.detail {
  flex-direction: row;
}

.movie-cover {
  width: 100%;
  height: 200px;
  background-image: url("{{detail.img}}");
  background-repeat: no-repeat;
  background-size: 400%;
  position: absolute;
  z-index: -1;
  opacity: 1;
  filter: blur(10px);
}

.movie-avatar {
  width: 35%;
  height: 140px;
}

.movie-top {
  height: 200px;
  padding-left: 30px;
  padding-top: 30px;
}

.movie-top .left image {
  width: 100px;
  height: 140px;
}

.movie-top .right {
  margin-left: 10px;
  color: #fff;
  opacity: 0.7;
  font-size: 14px;
}

.movie-top-right {
  height: 200px;
}

.movie-describe {
  flex-direction: row;
}

.pull-right {
  float: right;
}

.pull-left {
  float: left;
}

.clearfix:after {
  content: '';
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}

.text_det {
  color: white;
  font-size: 12px;
  padding-top: 2px;
}



.info .text{
	transition: 1s;
}

.info .text text{
	padding:5px;
	font-size:14px;
	overflow: hidden;
	display: -webkit-box;
    -webkit-box-orient: vertical;
    transition: 1s;
}
.controlText{
	text-align: center;
}
.controlText text{
	display:inline-block;
	width:28px;
	height:20px;
}
.controlText text:after{
	content:'';
	display: block;
	width:10px;
	height:10px;
	border: 1px solid;
	border-left-width: 0;
	border-top-width: 0;
	transform: rotate(45deg);
}