/* pages/detail/detail.wxss */

.detail {
  flex-direction: row;
}

.movie-cover {
  width: 100%;
  height: 200px;
  background-image: url("{{detail.img}}");
  background-repeat: no-repeat;
  background-size: 400%;
  position: absolute;
  z-index: -1;
  opacity: 1;
  filter: blur(10px);
}

.movie-avatar {
  width: 35%;
  height: 140px;
}

.movie-top {
  height: 200px;
  padding-left: 30px;
  padding-top: 30px;
}

.movie-top .left image {
  width: 100px;
  height: 140px;
}

.movie-top .right {
  margin-left: 10px;
  color: #fff;
  opacity: 0.7;
  font-size: 14px;
}

.movie-top-right {
  height: 200px;
}

.movie-describe {
  flex-direction: row;
}

.pull-right {
  float: right;
}

.pull-left {
  float: left;
}

.clearfix:after {
  content: '';
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}

.text {
  color: white;
  font-size: 12px;
  padding-top: 2px;
}
